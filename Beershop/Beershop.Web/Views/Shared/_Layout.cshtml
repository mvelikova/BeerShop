                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Beershop.Web</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a asp-area="Beers" asp-controller="Home" asp-action="Create">CreateBeer</a></li>
                    <li><a asp-area="Events" asp-controller="Home" asp-action="Create">CreateEvent</a></li>

